クラスの返し方一覧

public class A{
    //プロパティーで返す//
    public static Instance{
        get{
            return new A();
        }
    }
    
    public static Self{
        get{
            return this;
        }
    } 
    
    //関数で返す//
    public static A Create(){
        return new A();
    }
    
    public A Get(){
        return this;
    }
    
    
}
